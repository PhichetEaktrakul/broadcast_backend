FROM eclipse-temurin:21-jdk-alpine AS builder

WORKDIR /app

COPY broadcast_backend/gradlew .

COPY broadcast_backend/gradlew.bat .

COPY broadcast_backend/gradle ./gradle

COPY broadcast_backend/build.gradle.kts .

COPY broadcast_backend/settings.gradle.kts .

COPY broadcast_backend/src ./src

RUN apk add --no-cache bash

RUN chmod +x gradlew

RUN ./gradlew build -x test

FROM eclipse-temurin:21-jdk-alpine

WORKDIR /app

COPY --from=builder /app/build/libs/*.jar app.jar

EXPOSE 8080

ENTRYPOINT ["java","-jar","app.jar"]
